{
    "name": "faas",
    "private": true,
    "devDependencies": {
        "lerna": "3.14.1",
        "kill-port": "^1.6.1"
    },
    "scripts": {
        "setup": "node ./bin/setup.js",
        "bootstrap": "lerna bootstrap",
        "kill-port": "kill-port 8080",
        "start": "yarn setup && yarn kill-port && yarn bootstrap && docker-compose up -d",
        "stop": "docker-compose down -v --remove-orphans"
    }
}